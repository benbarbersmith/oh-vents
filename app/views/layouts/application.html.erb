<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% if flash[:alert] %>
      <div class="alert alert-error">
        <strong>Uh-oh!</strong> <%= flash[:alert] %>
      </div>
      <% end %>
      <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <%= hero %>
      <section>
        <div class="row">
          <div class="span12">
            <%= yield %>
          </div>
        </div>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
